<Window x:Class="FilmTicketBooking.Views.Admin.Staff.MainStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmTicketBooking.Views.Admin.Staff" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainStaffVM}"
        Name="Main_Staff"
        ResizeMode="NoResize"
        Height="800" Width="1440"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel LastChildFill="False">
            <StackPanel Width="200"                        
                        Background="#FF1F2F55">
                <Button BorderBrush="Transparent"
                        Width="150"
                        Height="100"
                        Background="Transparent">
                    <materialDesign:PackIcon Kind="Movie" Width="100" Height="100"/>
                </Button>
                <Button Content="Phim đang chiếu"
                        FontSize="20"
                        Height="50"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        />
                <Button Content="Phim sắp chiếu"
                        FontSize="20"
                        Height="50"
                        BorderBrush="Transparent"
                        Background="Transparent"/>
                <Button Content="Thể loại"
                        FontSize="20"
                        Height="50"
                       BorderBrush="Transparent"
                        Background="Transparent"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top"
                        Height="40"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Background="#FF263456">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding MouseMoveWindowCM}"
                                               CommandParameter="{Binding ElementName=Main_Staff}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Button Command="{Binding MinimizeMainStaffWindowCM}"
                        CommandParameter="{Binding ElementName=Main_Staff}"
                        Foreground="#DD0FE4E4"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Margin="1080 0 0 0">
                    <materialDesign:PackIcon Kind="WindowMinimize"/>
                </Button>
                <Button Foreground="#DD0FE4E4"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Command="{Binding CloseMainStaffWindowCM}"
                        CommandParameter="{Binding ElementName=Main_Staff}">
                    <materialDesign:PackIcon Kind="WindowClose"/>
                </Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top"
                        Height="60"
                        VerticalAlignment="Top"
                        Orientation="Horizontal" 
                        Background="#FF16274D">
                <materialDesign:PackIcon Kind="Magnify" 
                                         Width="25"
                                         Height="35"
                                         Foreground="White"
                                         Margin="15 22 0 0"
                                         VerticalAlignment="Center"/>
                <TextBlock Width="500"
                           Height="40"
                           FontSize="25"
                           Foreground="White"
                           Margin="10 25 0 10">
                    <Italic>Tìm kiếm phim</Italic>
                </TextBlock>
                <TextBlock VerticalAlignment="Center"
                           Width="100"
                           Height="25"
                           FontSize="22"
                           Foreground="White"
                           Margin="450 25 0 0">
                    <Italic>Username</Italic></TextBlock>
                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Height="63">
                    <materialDesign:PackIcon Kind="AccountCircle" Width="60" Height="60"/>
                </Button>
            </StackPanel>
            <StackPanel DockPanel.Dock="Left" Background="#FF0E1C40"
                        >
                <Button Content="1"
                        BorderBrush="Transparent"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="2"
                        BorderBrush="Transparent"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="3"
                        BorderBrush="Transparent"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="4"
                        BorderBrush="Transparent"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
                <Button Content="5"
                        BorderBrush="Transparent"
                        Width="50"
                        Height="75"
                        Background="Transparent"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
