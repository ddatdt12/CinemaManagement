<Window x:Class="CinemaManagement.Views.Staff.MainStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaManagement.Views.Staff" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        DataContext="{StaticResource MainStaffVM}"
        Name="Main_Staff"
        ResizeMode="NoResize"
        Height="800" Width="1440"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel LastChildFill="False">
            <!--Thanh cong cu ben trai-->
            <StackPanel Width="200"                        
                        Background="#FF1F2F55">
                <Button BorderBrush="#FF16274D"
                        Width="200"
                        Height="100"
                        Background="Transparent">
                    <materialDesign:PackIcon Kind="Movie" Width="100" Height="100"/>
                </Button>
                <Label Content="Phim đang chiếu"
                       Foreground="White"
                       Height="50"
                       FontSize="17"
                       BorderBrush="#FF16274D"
                       HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Center"
                       Cursor="Hand"
                       x:Name="Phimdangchieu">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding ChangeLabelBackgroundCM1}"
                                                   CommandParameter="{Binding ElementName=Phimdangchieu}"/>
                        </i:EventTrigger>

                        <i:EventTrigger EventName="MouseEnter">
                            <i:InvokeCommandAction Command="{Binding ChangeLabelBackgroundCM2}"
                                                   CommandParameter="{Binding ElementName=Phimdangchieu}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="MouseLeave">
                            <i:InvokeCommandAction Command="{Binding ChangeLabelBackgroundCM2}"
                                                   CommandParameter="{Binding ElementName=Phimdangchieu}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Label>
                <Button Content="Phim sắp chiếu"
                        FontSize="20"
                        Height="50"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
                <Button Content="Thể loại"
                        FontSize="20"
                        Height="50"
                        BorderBrush="#FF16274D"
                        Background="Transparent"
                        Command="{Binding ButtonVisibility}"
                        CommandParameter="{Binding ElementName=ButtonCategoryFilm}"/>
            </StackPanel>
            <!--thanh task bar de keo-->
            <StackPanel DockPanel.Dock="Top"
                        Height="40"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Background="#FF263456">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding MouseMoveWindowCM}"
                                               CommandParameter="{Binding ElementName=Main_Staff}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Button Command="{Binding MinimizeMainStaffWindowCM}"
                        CommandParameter="{Binding ElementName=Main_Staff}"
                        Cursor="Hand"
                        Margin="1120 0 0 0">
                    <materialDesign:PackIcon Kind="WindowMinimize"></materialDesign:PackIcon>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="20"></Setter>
                            <Setter Property="Width" Value="30"></Setter>
                            <Setter Property="BorderBrush" Value="#FF16274D"></Setter>
                            <Setter Property="Background" Value="#FF263456"></Setter>
                            <Setter Property="Foreground" Value="#DD0FE4E4"></Setter>
                            <Style.Triggers >
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Height" Value="30"></Setter>
                                    <Setter Property="Width" Value="40"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Foreground="#DD0FE4E4"
                        BorderBrush="#FF16274D"
                        Background="Transparent"
                        Cursor="Hand"
                        Command="{Binding CloseMainStaffWindowCM}"
                        CommandParameter="{Binding ElementName=Main_Staff}">
                    <materialDesign:PackIcon Kind="WindowClose"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Height" Value="20"></Setter>
                            <Setter Property="Width" Value="30"></Setter>
                            <Setter Property="BorderBrush" Value="#FF16274D"></Setter>
                            <Setter Property="Background" Value="#FF263456"></Setter>
                            <Setter Property="Foreground" Value="#DD0FE4E4"></Setter>
                            <Style.Triggers >
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Height" Value="30"></Setter>
                                    <Setter Property="Width" Value="40"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <!--thanh tim kiem-->
            <StackPanel DockPanel.Dock="Top"
                        Height="60"
                        VerticalAlignment="Top"
                        Orientation="Horizontal" 
                        Background="#FF16274D">
                <materialDesign:PackIcon Kind="Magnify" 
                                         Width="25"
                                         Height="35"
                                         Foreground="White"
                                         Margin="15 20 0 0"
                                         VerticalAlignment="Center"/>
                <TextBox  x:Name="CommentTextBox"
                          Width="500"
                           Height="40"
                           FontSize="20"
                           Foreground="White"
                           Margin="10,25,0,0"
                          materialDesign:HintAssist.Hint="Tìm kiếm phim" />
                <TextBlock VerticalAlignment="Center"
                           Width="140"
                           Height="25"
                           FontSize="22"
                           Foreground="White"
                           Margin="421 25 0 0">
                    <Italic>HaiPhong_146</Italic></TextBlock>
                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Command="{Binding ButtonVisibility}"
                        CommandParameter="{Binding ElementName=ButtonUserName}"
                        Height="63">
                    <materialDesign:PackIcon Kind="AccountCircle" 
                                             Width="60" 
                                             Height="60"/>
                </Button>
            </StackPanel>
        </DockPanel>
        <!--Frame show noi dung-->
        <Frame x:Name="Frameshow" Height="700" Width="1240"
               VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction 
                Command="{Binding LoadMainStaffPageCM}"
                        CommandParameter="{Binding ElementName=Frameshow}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Frame>
        <!--thanh cong cu cua then username-->
        <Grid Height="200"
              VerticalAlignment="Top"
              Width="240"
              HorizontalAlignment="Right"
              Margin="0 100 0 0">
            <StackPanel Background="#FF0E1C40"
                        x:Name="ButtonUserName"                     
                        Visibility="Collapsed">
                <TextBlock Height="35"
                           FontSize="30"
                           Foreground="White"
                           Background="Transparent"
                           TextAlignment="Center"
                           Margin="0 10 0 0">
                   <Italic>Lê Hải Phong</Italic>
                </TextBlock>
                <TextBlock Height="35"
                           FontSize="30"
                           Foreground="White"
                           Background="Transparent"
                           TextAlignment="Center"
                           Margin="0 10 0 0"
                           >
                   <Italic>212454483</Italic>
                </TextBlock>
                <TextBlock Height="35"
                           FontSize="30"
                           Foreground="White"
                           Background="Transparent"
                           TextAlignment="Center"
                           Margin="0 10 0 0"
                           >
                   <Italic>20/04/2002</Italic>
                </TextBlock>
                <TextBlock Height="35"
                           FontSize="30"
                           Foreground="White"
                           Background="Transparent"
                           TextAlignment="Center"
                           Margin="0 10 0 0"
                           >
                   <Italic>0325339883</Italic>
                </TextBlock>

            </StackPanel>
        </Grid>
        <!--thanh cong cu cua then the loai-->
        <Grid Height="688"
              VerticalAlignment="Bottom"
              Width="240"
              HorizontalAlignment="Left"
              Margin="200 0 0 0">
            <StackPanel Background="#FF0E1C40"
                        x:Name="ButtonCategoryFilm"
                        Visibility="Collapsed">
                <Button Content="Kinh dị"
                        Height="50"
                        FontSize="20"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
                <Button Content="Hài hước"
                         Height="50"
                        FontSize="20"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
                <Button Content="Khoa học - viễn tưởng"
                         Height="50"
                        FontSize="20"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
                <Button Content="Hài kịch"
                        Height="50"
                        FontSize="20"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
                <Button Content="Tình cảm"
                         Height="50"
                        FontSize="20"
                        BorderBrush="#FF16274D"
                        Background="Transparent"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
